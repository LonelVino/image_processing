% Part.6  Geometric Parameters
%% 1. Load the images and generate binarized image
root = './appr/';
coeffs = zeros(100, 500);
for i = 1:100
    if i < 10
        num = strcat('00', i)
    else
        num = 
    end
    img_test = imread([root, 'mesure' + .png']);
    BW = imbinarize(img_test);
    [B,L,N,A] = bwboundaries(BW);
    B_coeff = FFT_coeff(B);
end

%% 2. Principal Component Analysis

function coeff = FFT_coeff(B)
    complex_BW = B{1}(:,1) + i*B{1}(:,2);
    coeff = dfdir(complex_BW, 50);
end